<Page
    x:Class="MartialArtsWiki.Pages.AddEntryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MartialArtsWiki.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:MartialArtsWiki.Views"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="LayoutRoot">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Panel -->
        <views:BarPageTop x:ConnectionId='1' Title="Add Entry"
                                                     />

        <!--TODO: Content should be placed within the following grid-->
        <StackPanel Visibility="Collapsed"
                    Name="cameraCapture"
                    Grid.Row="1">
            <CaptureElement Name="captureElement"/>
            <Button x:ConnectionId='4' Content="Take Photo"
                                              />
        </StackPanel>
        <Grid Grid.Row="1" x:Name="ContentRoot" Margin="19,9.5,19,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            
            <TextBlock Text="Name"
                       Grid.ColumnSpan="2"
                       Grid.Row="0"
                       Style="{StaticResource LabelStyle}"/>
            <TextBox Grid.ColumnSpan="2"
                     Grid.Row="1"
                     Text="{Binding MartialArt.Name, Mode=TwoWay}" />
            <TextBlock Text="Description"
                       Grid.ColumnSpan="2"
                       Grid.Row="2"
                       Style="{StaticResource LabelStyle}"/>
            <TextBox Grid.ColumnSpan="2"
                     Grid.Row="3"
                     Height="100"
                     Text="{Binding MartialArt.Description, Mode=TwoWay}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"/>
            <Button x:ConnectionId='2' Content="Image from camera"
                    Grid.Row="4"
                    Grid.Column="0"
                    FontSize="17"
                    Height="50"
                                            />
            <Button Content="Image from gallery"
                    Grid.Row="4"
                    Grid.Column="1"
                    Height="50"
                    Command="{Binding SelectImage}"/>
            <Button x:ConnectionId='3' Content="Submit"
                    Grid.Row="5"
                    Grid.ColumnSpan="2"
                    Height="70"
                    HorizontalAlignment="Stretch"
                                              />
        </Grid>
    </Grid>
</Page>

